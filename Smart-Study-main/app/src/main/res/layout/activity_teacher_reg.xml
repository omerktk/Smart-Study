<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:visibility="visible"

    >


    <TextView
        android:id="@+id/signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:gravity="center"
        android:text="Teacher Register"
        android:textColor="#355C7D"
        android:textSize="35dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/t_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/signin"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#3C355C7D"
        android:drawablePadding="20dp"
        android:hint="Your Name"
        android:inputType="number"
        android:padding="20dp"
        android:textColor="#355C7D"
        android:textColorHint="#355C7D" />


    <EditText
        android:id="@+id/t_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/t_name"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#3C355C7D"
        android:drawablePadding="20dp"
        android:hint="Username"
        android:inputType="textPassword"
        android:padding="20dp"
        android:textColor="#355C7D"
        android:textColorHint="#355C7D" />

    <EditText
        android:id="@+id/t_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/t_user"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#3C355C7D"
        android:drawablePadding="20dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="20dp"
        android:textColor="#355C7D"
        android:textColorHint="#355C7D" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/t_regbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/t_pass"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/rounde_btn"
        android:backgroundTint="#355C7D"
        android:text="Register"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/t_logbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="202dp"
        android:backgroundTint="#355C7D"
        android:gravity="center"
        android:text="Already have an account"
        android:textColor="#355C7D"
        android:textSize="21sp" />


</RelativeLayout>