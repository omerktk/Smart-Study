<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:visibility="visible"
    >

    <TextView
        android:id="@+id/signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text="Parent Register"
        android:textColor="#355C7D"
        android:textSize="35dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/p_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/signin"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#3C355C7D"
        android:drawablePadding="20dp"
        android:hint="Your Name"
        android:inputType="text"
        android:padding="20dp"
        android:textColor="#355C7D"
        android:textColorHint="#355C7D" />


    <EditText
        android:id="@+id/p_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/p_name"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#3C355C7D"
        android:drawablePadding="20dp"
        android:hint="Username"
        android:inputType="text"
        android:padding="20dp"
        android:textColor="#355C7D"
        android:textColorHint="#355C7D" />

    <EditText
        android:id="@+id/p_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/p_user"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#3C355C7D"
        android:drawablePadding="20dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="20dp"
        android:textColor="#355C7D"
        android:textColorHint="#355C7D" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/p_regbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/p_pass"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/rounde_btn"
        android:backgroundTint="#355C7D"
        android:text="Register"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/p_sign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="510dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text="Already Have an account"
        android:textColor="#355C7D"
        android:textSize="25dp"
        android:textStyle="bold" />

</RelativeLayout>