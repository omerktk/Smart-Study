<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AuthActivity"
    android:orientation="vertical"
    android:background="#E9F0FB"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="100dp"
        >

        <ImageView
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:src="@drawable/dash"
            />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/play"
            android:layout_width="300dp"
            android:layout_height="170dp"
            android:layout_gravity="center"
            android:gravity="center"
            app:cardCornerRadius="30dp"
            android:layout_marginTop="10dp"
            app:cardElevation="10dp"
            android:layout_marginBottom="5dp"
            >

            <ImageView
                android:id="@+id/img_t"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/btn_title1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#6D000000"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="LOGIN AS TEACHER"
                android:textSize="25dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:textColor="#fff"
                android:textStyle="bold|italic"

                />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/about"
            android:layout_width="300dp"
            android:layout_height="170dp"
            android:layout_gravity="center"
            android:gravity="center"
            app:cardCornerRadius="30dp"
            android:layout_marginTop="20dp"
            app:cardElevation="10dp"
            android:layout_marginBottom="5dp"
            >
            <ImageView
                android:id="@+id/img_std"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                />
            <TextView
                android:id="@+id/btn_title2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="LOGIN AS STUDENT"
                android:textSize="25dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:textColor="#fff"
                android:background="#6D000000"
                android:textStyle="bold|italic"

                />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/high"
            android:layout_width="300dp"
            android:layout_height="170dp"
            android:layout_gravity="center"
            android:gravity="center"
            app:cardCornerRadius="30dp"
            android:layout_marginTop="20dp"
            app:cardElevation="10dp"
            android:layout_marginBottom="10dp"
            >
            <ImageView
                android:id="@+id/img_p"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                />
            <TextView
                android:id="@+id/btn_title3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="LOGIN AS PARENT"
                android:textSize="25dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:textColor="#fff"
                android:background="#6D000000"
                android:textStyle="bold|italic"

                />

        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>




</ScrollView>